.faq
  background black
  padding 53px 6% 40px
  overflow hidden

.faq__title
  margin 0
  font-size 34px
  line-height 46px
  font-weight 700
  font-style italic
  color $white
  margin-bottom 34px

.accordion-container
  width 100%

.accordion
  position relative
  font-size 18px
  line-height 30px
  cursor pointer
  font-weight 700
  width 100%
  text-align left
  background transparent
  border none
  outline none
  transition 0.4s
  color $white
  padding-top 13px
  border-bottom solid 1px #3d3d3d;
  padding-bottom 13px
  padding-right: 122px;

.indicator
  position absolute
  top 50%
  right 3%
  transform translate(0, -50%)
  width 21px
  height 21px
  transition transform 0.2s ease

.indicator::before
  content ''
  position absolute
  right 10px
  top 0
  width 2px
  height 21px
  background $white

.indicator::after
  content ''
  position absolute
  right 1px
  top 10px
  width 21px
  height 2px
  background $white

.accordion.active .indicator
  transform rotate(-45deg) translate(0, -50%)


.accordion.active
  background-color #1b1b1b
  color $pink
  padding-left 20px
  border-bottom none


.panel
  max-height: 0;
  transition: all 0.2s ease-out;
  box-sizing content-box


.active + .panel
  font-size 15px
  line-height 25px
  color $white
  padding 27px 20 20px
  overflow: hidden;
  background-color #1b1b1b