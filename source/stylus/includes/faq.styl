.faq
  background black
  padding 53px 6% 40px
  overflow hidden

  @media screen and (min-width: 1200px)
    padding 68px 0


.faq__wrapper

  @media screen and (min-width: 1200px)
    width 931px
    margin 0 auto

.faq__title
  margin 0
  font-size 34px
  line-height 46px
  font-weight 700
  font-style italic
  color $white
  margin-bottom 34px

  @media screen and (min-width: 1200px)
    font-size 36px
    line-height 49px
    text-align center

.accordion-container
  width 100%

.accordion
  position relative
  font-size 18px
  line-height 30px
  cursor pointer
  font-weight 700
  width 100%
  text-align left
  background transparent
  border none
  outline none
  transition 0.4s
  color $white
  padding-top 13px
  border-bottom solid 1px #3d3d3d;
  padding-bottom 13px
  padding-right: 122px;

  @media screen and (min-width: 1200px)
    font-size 22px
    line-height 30px

.indicator
  position absolute
  top 50%
  right 3%
  transform translate(0, -50%)
  width 22px
  height 22px
  transition transform 0.2s ease

.indicator::before
  content ''
  position absolute
  right 10px
  top 0
  width 2px
  height 22px
  background $white

.indicator::after
  content ''
  position absolute
  right 0
  top 10px
  width 22px
  height 2px
  background $white

.accordion.active .indicator
  transform rotate(-45deg) translate(0, -50%)


.accordion.active
  background-color #1b1b1b
  color $pink
  padding-left 20px
  border-bottom none


.panel
  max-height 0
  transition all 0.2s ease-out
  box-sizing content-box


.active + .panel
  font-size 15px
  line-height 25px
  color $white
  padding-top 27px
  padding-bottom 70px
  padding-left 20px
  padding-right 20px
  overflow hidden
  background-color #1b1b1b

    @media screen and (min-width: 1200px)
      font-size 16px
      line-height 26px