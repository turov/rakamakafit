.header
  width 100%
  position absolute
  top: 0
  left 50%
  z-index 4
  transform translateX(-50%)
  transition background 0.6s ease

.logo
  margin-left 7px

.nav
  position relative
  display flex
  flex-direction row
  justify-content space-between
  align-items center
  padding 26px 5%

  @media screen and (min-width: 1200px)
    width 1200px
    padding 40px 16px
    margin 0 auto


.nav__btn
  position: absolute;
  top: 30px;
  right: 6%
  z-index: 2;
  display: block;
  width: 26px;
  height: 26px;

  @media screen and (min-width: 1200px)
    display none

.nav__btn i
  position relative
  display block
  width 25px
  height 3px
  border-radius 5px
  background $white
  transition width 0.4s ease

.nav--opened .nav__btn i
  width 0

.nav__btn i::before
  content ''
  position absolute
  width 25px
  height 3px
  border-radius 5px
  background $white
  top 11px
  left 0
  transition all 0.3s ease

.nav--opened .nav__btn i::before
  transform rotate(45deg)
  width 31px
  top -1px
  left -3px

.nav__btn i::after
  content ''
  position absolute
  width 25px
  height 3px
  border-radius 5px
  background $white
  top -11px
  left 0
  transition all 0.3s ease

.nav--opened .nav__btn i::after
  transform rotate(-45deg)
  width 31px
  top -1px
  left -3px


.nav--opened .nav__list
  display block

.nav__list
  position absolute
  list-style none
  margin 0
  padding 0
  top 174px
  left 0
  display none

.nav__item
  margin-bottom 10px


.nav__link
  text-decoration none
  font-size 20px
  line-height 1.8
  color $white
  text-transform uppercase

.nav--opened .nav__title
  display block

.nav__title
  position absolute
  top 94px
  left 0
  font-size 14px
  line-height 21px
  font-weight 600
  color white
  margin 0
  padding 0 5%
  display none

  @media screen and (min-width: 375px)
    font-size 16px


.nav--opened .contacts
  display block

.contacts
  position absolute
  top 75.5vh
  left 0
  font-size 16px
  line-height 20px
  display none

  @media screen and (min-width: 375px)
    top 79.5vh

.contacts__tel
  display block
  text-decoration none
  color $white

.contacts__mail
  display block
  text-decoration none
  color $green
  text-transform uppercase
  margin-bottom 27px

.btn--buy
  display block
  text-decoration none
  height 50px
  width 197px
  padding 10px 6px 8px
  font-size 16px
  line-height 28px
  letter-spacing 0.6px
  color $white
  background $pink
  text-align center