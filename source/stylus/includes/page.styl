.page
  width 100%
  height: 100%
  margin 0
  padding 0
  overflow-x hidden
  font-family "Open Sans", "Arial", sans-serif

html, body
  overflow-x hidden
  box-sizing border-box

*,
*::before,
*::after
  box-sizing inherit

.visually-hidden:not(:focus):not(:active)
  overflow hidden
  position absolute
  margin -1px
  padding 0
  width 1px
  height 1px
  border 0
  white-space nowrap
  -webkit-clip-path inset(100%)
  clip-path inset(100%)
  clip rect(0 0 0 0)

.wrapper-black
  display none
  position fixed
  width 100vw
  height 100vh
  top 0
  left 0
  background $wrapper-black
  z-index 2

.wrapper-black--active
  display block

.page--fixed
  height 100vh