  font-size 0
  align-items center
  height 10px

.slick-dots li
  width 7px
  height 7px
  background rgba(228 19 119, 0.3)
  border-radius 50%
  margin-right 15px

.slick-dots li:last-child
  margin-right 0

.slick-dots .slick-active
