  font-weight: 600;
  width 47px
  height 24px
  border-radius 12px
  background $pink
  position absolute
  top 0
  left 50%
  transform translateX(-50%)

.aft
  position relative
  margin-bottom 22px
  display block
  padding-top 12px

.aft span
  display flex
  align-items center
  justify-content center
  font-size: 8px;
  line-height 8px
  color $black
  font-weight: 600;
  width 47px
  height 24px
  border-radius 12px
  background $green
  position absolute
  top 0
  left 50%
  transform translateX(-50%)

.slick-dots
  margin 0
  padding 0
  list-style none
  position absolute
  bottom 50px
  left 50%
  transform translateX(-50%)
