.wyg
  width 100%

.wyg__title
  font-size 15px
  line-height 25px
  font-weight 400
  color $black
  text-align center
  letter-spacing 0.1px
  margin-top 0
  margin-bottom 34px
  margin-left auto
  margin-right auto
  width 89%
  text-align center

  @media screen and (min-width: 1200px)
    font-size 24px
    line-height 28px
    width 658px
    margin-bottom 88px

.wyg__bg

  @media screen and (min-width: 1200px)
    background #000000

.wyg__wrapper

  @media screen and (min-width: 1200px)
    display flex
    width 1200px
    margin 0 auto
    padding 63px 0 0
    height 516px

.wyg__container
  background #000000
  padding 36px 6% 25px

  @media screen and (min-width: 1200px)
    padding 0

.wyg__title-inner
  font-weight 700
  font-size 18px
  line-height 24px
  color $pink
  margin-bottom 13px

  @media screen and (min-width: 1200px)
    font-size 30px
    line-height 41px
    margin 0
    margin-bottom 31px

.wyg__desc
  font-size 15px
  line-height 25px
  color $white
  margin-top 0
  margin-bottom 10px

  @media screen and (min-width: 1200px)
    width 634px
    font-size 16px
    line-height 26px
    margin-bottom 26px

.wyg__desc--icon
  position relative
  padding-left 40px
  margin-top 16px

  @media screen and (min-width: 1200px)
    width 550px
    padding-left 60px

