  @media screen and (min-width: 1200px)
    left 10px
    margin-bottom 0

.wyg__promo
  position relative
  background #000000
  margin-top -1px

  @media screen and (min-width: 1200px)
    background transparent
    width 594px
    flex-shrink 0
    margin-top -126px

.wyg__promo::before
  content 'FIT'
  position absolute
  font-size 350px
  line-height 30px
  font-weight 800
  font-style italic
  color rgba(255, 255, 255, 0.1)
  display block
  left 50%
  top 145px
  transform translateX(-50%)

  @media screen and (min-width: 1200px)
    font-size 500px
    top 280px

.wyg__promo::after
  content ''
  position absolute
  width 100%
  height 4%
  background $white
  bottom 0
  left 0

  @media screen and (min-width: 1200px)
    display none

.wyg__image
  position relative
  z-index 1
  width: 100%
  height: auto;
  left: 0;
  bottom: 0;

  @media screen and (min-width: 1200px)
    width 564px
    height 595px

.wyg__promo::after
  content ''
  position absolute
  width 100%
  height 3.6%
  background $white
  bottom -1px
  left 0